server {
    listen 80;
    server_name giorgio.qu3v3d0.tech;

    root /home/giorgio/html;
    index index.html index.htm;

    location ~* \.json$ {
        add_header Content-Type application/json;
        add_header Access-Control-Allow-Origin *;
    }

    access_log /var/log/nginx/giorgio-access.log;
    error_log /var/log/nginx/giorgio-error.log;

    autoindex off;
}
